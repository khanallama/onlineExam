{% extends 'base.html.twig' %}
{% block title %}Hello MainController!{% endblock %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div>
        <h1 class="text-center text-white font-weight-bold text-uppercase bg-dark"> Coding Test </h1><br>
        <div class="container "><br>
            <div class=" col-lg-12 text-center">
                <h3 class="text-uppercase text-warning"></h3>
                <h3>
                    Welcome To <b>MCQ</b> Test </h3>
            </div>
            <br>
            <div class="col-lg-8 d-block m-auto bg-light quizsetting ">
                <div class="card">
                    <p class="card-header bg-secondary text-center text-uppercase  ">
                        {% if questions == true %}
                      {{ app.user.name}}  , You
                        have to select correct option. Best of Luck.</p>
                    {% else %}
                        No Questions Answer!
                    {% endif %}
                </div>
                <br>
                <form method="post" action="{{ path('test_submit') }}">
                    <ul  class="list-unstyled">
                        {% for question in questions  %}
                           <input type="hidden" value="{{ questions|length }}" name="total_questions">
                            <div class="card">
                                <p class="card-header bg-warning"> <b>{{ range('1','100')[loop.index0] }}.{{ question.question }}</b> </p>
                                {% for answer in answers[question.id] %}
                                    <div class="card-block">
                                        <ul  class="list-unstyled">
                                            <li><input type="radio" name="answer[{{ question.id  }}]" value="{{ answer.Id }}">{{answer.answers }}</li>
                                        </ul>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </ul>
                    {% if questions == true %}
                    <input type="submit" Value="Submit" class="btn btn-success m-auto d-block" /><br>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
