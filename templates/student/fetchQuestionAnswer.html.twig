{% extends 'base.html.twig' %}
{% block title %}Hello MainController!{% endblock %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div>
        <h1 class="text-center text-white font-weight-bold text-uppercase bg-dark"> Coding Test </h1><br>
        <div class="container "><br>
            <div class=" col-lg-12 text-center">
                <h3 class="text-uppercase text-warning"></h3>
                <h3>
                    Welcome To <b>MCQ</b> Test </h3>
            </div>
            <br>
            <div class="col-lg-8 d-block m-auto bg-light quizsetting ">
                <div class="card">
                    <p class="card-header bg-secondary text-center text-uppercase  ">
                        , You
                        have to select correct option. Best of Luck.</i> </p>
                </div>
                <br>
                <form method="post" action="{{ path('answerSubmit') }}">
                    <ul  class="list-unstyled">

                        {% for questions in question  %}
                            <div class="card">
                                <br>
                                <p class="card-header bg-warning"> <b>{{ range('1','100')[loop.index0] }}.{{ questions.question }}</b> </p>
                                {% for ans in Myanswer[questions.id] %}
                                    <div class="card-block">
                                        <ul  class="list-unstyled">
                                            <li><input type="radio" name="answer[{{ questions.id  }}]" value="{{ ans.answerId }}">{{ans.answers }}</li>
                                        </ul>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </ul>
                    <input type="submit" Value="Submit" class="btn btn-success m-auto d-block" /><br>
                </form>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
