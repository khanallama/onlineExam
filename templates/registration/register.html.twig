{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Register </h1><br>

        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <h4 class="card-header bg-dark text-white text-center"> Sign-Up </h4>
                    <br>
                    {{ form_start(registrationForm) }}
                    <div class="form-group">
                        <div class="row">
                            {{ form_row(registrationForm.name , {'attr': {'placeholder':'Enter your name', 'class':'col-md-12'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.email,{'attr': {'placeholder':'Enter your email', 'class':'col-md-12'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password',
                            'attr': {'placeholder':'Enter your Password', 'class':'col-md-12'}
                        }) }}
                    </div>
                    <div class="mt-2">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                    <button class="btn btn-dark d-block m-auto" type="submit"> Register </button><br>
                    {{ form_end(registrationForm) }}
                </div>
                <hr><a href="{{ path('app_login') }}"><button class="btn btn-dark d-block m-auto" type="submit">
                        login</button></a>
            </div>
        </div>
    </div>
{% endblock %}
