{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        ENTER <b class="text-uppercase">Question and Answers</b>
        <div class ="mt-5">
            <form method="POST" action="{{ path('create_question_answer') }}">
                <div class="form-group">
                    <label for="Inputquestion">Type Question Here:</label>
                    <textarea class="form-control " name="question" id="exampleFormControlTextarea6"
                              rows="3" placeholder="Write Question here..." required></textarea>
                </div>
                <div class="form-group">
                    <label for="eInputanswer">Enter Correct Answer</label>
                    <input type="text" name="correctAnswer" class="form-control" id="exampleInputanswer"
                           placeholder="Enter Correct Answer" required>
                </div>
                <div class="form-group">
                    <label for="Inputanswer">Other Answers</label>
                    <input type="text" class="form-control" id="exampleInputanswer" name="wronganswer1"
                           placeholder="Enter Wrong Answer" required><br>
                    <input type="text" class="form-control" id="exampleInputanswer" name="wronganswer2"
                           placeholder="Enter Wrong Answer" required><br>
                    <input type="text" class="form-control" id="exampleInputanswer" name="wronganswer3"
                           placeholder="Enter Wrong Answer" required><br>
                </div>
                <button type="submit" name = "submit" class="btn btn-dark">Submit</button>
                <div class="form-group shadow-textarea">
                </div>
            </form>
        </div>
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                {% if type == 'danger' %}
                    <div class="alert alert-{{ type }}">
                        {{ message }}
                    </div>
                {% elseif type == 'success' %}
                    <div class="alert alert-{{ type }}">
                        {{ message }}
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </div>
    </div>
{% endblock %}
